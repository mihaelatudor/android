<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".CreareTestActivity"
    android:orientation="vertical">

    <include layout="@layout/toolbar_activitati"></include>

    <LinearLayout
        android:id="@+id/linearL1Creare"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/intrebareTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:padding="16dp"
            android:text="@string/intrebareString"
            android:textSize="18sp" />



        <EditText
            android:id="@+id/inputIntrebareEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:gravity="top|start"
            android:hint="@string/intrebareHint"
            android:inputType="textMultiLine"
            android:minLines="5"
            android:text="@string/intrebareStringEdit"
            android:textSize="17sp"
            tools:text="@string/intrebareStringEdit"
            android:padding="15dp" />

        <LinearLayout
            android:id="@+id/linearL2Creare"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="10dp">

            <TextView
                android:id="@+id/corectTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/corect"
                android:textSize="15sp" />

            <Space
                android:id="@+id/space1Creare"
                android:layout_width="120dp"
                android:layout_height="5dp" />

            <TextView
                android:id="@+id/raspunsuriTxtCreare"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/raspunsuri"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearL3Creare"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="16dp">

            <LinearLayout
                android:id="@+id/linearL4Creare"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/rCorectchkb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true" />

                <Space
                    android:id="@+id/space2Creare"
                    android:layout_width="20dp"
                    android:layout_height="5dp" />

                <EditText
                    android:id="@+id/raspunsEdit"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/border"
                    android:hint="@string/raspunsHint"
                    android:inputType="text"
                    android:text="@string/raspunsCreare"
                    android:textAlignment="textEnd" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearL5Creare"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/rCorectchb1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false" />

                <Space
                    android:id="@+id/space3Creare"
                    android:layout_width="20dp"
                    android:layout_height="5dp" />

                <EditText
                    android:id="@+id/raspunsEditCreare"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/border"
                    android:inputType="textMultiLine"
                    android:text="@string/raspuns1Creare"
                    android:textAlignment="textEnd" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearL6Creare"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/rCorectchb2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false" />

                <Space
                    android:layout_width="20dp"
                    android:layout_height="5dp" />

                <EditText
                    android:id="@+id/raspunsEdit2Creare"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/border"
                    android:inputType="textMultiLine"
                    android:text="@string/raspuns2Creare"
                    android:textAlignment="textEnd" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearL7Creare"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/linearL8Creare"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/switchTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/activeazaTimpul" />

                <Switch
                    android:id="@+id/switchCreare"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearL9Creare"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/linearL10Creare"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/adaugaBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="act8_adaugaClick"
                        android:text="@string/adaugaRaspunsuri" />

                    <Space
                        android:id="@+id/space4Creare"
                        android:layout_width="30dp"
                        android:layout_height="5dp" />

                    <Button
                        android:id="@+id/stergeBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="act8_stergeClick"
                        android:text="@string/stergeRaspunsuri" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearL11Creare"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/salveazaBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="salveazaCreare"
                        android:text="@string/salveazaTxtCreare" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout >