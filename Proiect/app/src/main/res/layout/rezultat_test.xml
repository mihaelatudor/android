<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".RezultatTestActivity"
    android:orientation="vertical">

    <include layout="@layout/toolbar_activitati"></include>

    <LinearLayout
        android:id="@+id/linearL1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="16dp"
        android:paddingTop="20dp"
        android:paddingRight="16dp">

        <TextView
            android:id="@+id/notaTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/notaString"
            android:textSize="18sp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/notaTxtV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="@string/nNota"
            android:textSize="18sp"
            android:visibility="visible" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearL2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="15dp">

        <TextView
            android:id="@+id/punctajTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:text="@string/punctajTxt"
            android:textSize="18sp" />

        <RatingBar
            android:id="@+id/ratingBarTest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:isIndicator="true"
            android:numStars="5"
            android:rating="4" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearL3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/intrebariGresiteTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingTop="15dp"
            android:paddingRight="15dp"
            android:text="@string/intrGresiteString"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/nrIntrGTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nrIntr"
            android:textSize="18sp" />
    </LinearLayout>

</LinearLayout>