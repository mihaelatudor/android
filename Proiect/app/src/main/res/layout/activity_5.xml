<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity5">

    <include layout="@layout/toolbar_activitati"></include>

    <EditText
        android:id="@+id/act5_EditCod"
        android:layout_width="117dp"
        android:layout_height="56dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        android:ems="10"
        android:hint="@string/act5_codHint"
        android:inputType="textVisiblePassword"
        android:textAlignment="textStart"
        android:textSize="18sp"
        android:background="@drawable/border"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/act5_TxtCod"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.279" />

    <TextView
        android:id="@+id/act5_TxtCod"
        android:layout_width="197dp"
        android:layout_height="56dp"
        android:layout_marginStart="13dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="sans-serif"
        android:text="@string/act5_codText"
        android:textAlignment="textEnd"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/act5_EditCod"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.276" />


    <ImageView
        android:id="@+id/act5_image"
        android:layout_width="201dp"
        android:layout_height="302dp"
        android:layout_marginStart="90dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="1dp"
        android:contentDescription="@string/act5_ImgBrain"
        android:src="@drawable/brain"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/act5_EditCod"
        app:layout_constraintStart_toStartOf="@+id/act5_TxtCod"
        app:layout_constraintTop_toBottomOf="@+id/act5_EditCod"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/act5_salveazaBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:text="@string/act5_salveazaTxt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/act5_image"
        app:layout_constraintHorizontal_bias="0.339"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/act5_TxtCod"
        app:layout_constraintVertical_bias="0.141"
        android:onClick="act5_SalveazaBtn"/>


</android.support.constraint.ConstraintLayout>